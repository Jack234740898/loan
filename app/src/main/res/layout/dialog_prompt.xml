<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_card"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_step_12"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            style="@style/text_16_333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/prompt_click"
            android:layout_marginTop="@dimen/margin_step_16"
            android:background="@color/color_ccc" />

        <TextView
            android:id="@+id/prompt_click"
            style="@style/text_18_333"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_step_48"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.2"
            android:background="@drawable/press_btn"
            android:gravity="center"
            android:text="@string/sms_prompt_4" />
    </LinearLayout>
</LinearLayout>