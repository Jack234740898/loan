<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_card">

    <TextView
        android:id="@+id/text_title"
        style="@style/text_16_333"
        android:paddingTop="@dimen/margin_step_24"
        android:paddingLeft="@dimen/margin_step_24"
        android:paddingRight="@dimen/margin_step_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_step_12"
        android:text="" />

    <ListView
        android:id="@+id/list_view_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_step_24"
        android:paddingRight="@dimen/margin_step_24"
        android:cacheColorHint="#00000000"
        android:scrollbars="none"
        android:divider="@null"
        android:listSelector="@android:color/transparent" />


    <View
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_step_16"
        android:layout_height="1dp"
        android:background="@color/color_ccc" />

    <TextView
        android:id="@+id/prompt_click"
        style="@style/text_18_333"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_step_48"
        android:background="@drawable/press_btn"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/sms_prompt_4" />
</LinearLayout>
