<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/card"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:textSize="14sp"
        android:textColor="@color/color_950000"
        android:text="提示"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <com.qtt.jinrong.ui.widget.LineView
        android:id="@+id/titleLine"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:minHeight="120dp">

        <TextView
            android:id="@+id/message"
            style="@style/text_16_333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_step_24"
            android:layout_marginRight="@dimen/margin_step_24"
            android:gravity="center"
            android:text="" />

        <ProgressBar
            android:id="@+id/progress"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <com.qtt.jinrong.ui.widget.LineView
        android:id="@+id/msgLine"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            style="@style/text_18_333"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/press_btn"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_step_12"
            android:paddingTop="@dimen/margin_step_12"
            android:text="@string/cancel"/>

        <com.qtt.jinrong.ui.widget.LineVerticalView
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/btn_confirm"
            style="@style/text_18_333"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/press_btn"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_step_12"
            android:paddingTop="@dimen/margin_step_12"
            android:text="@string/confirm" />
    </LinearLayout>

</LinearLayout>
