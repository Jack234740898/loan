<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.android.finance.ui.widget.CommonTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:background="@color/red_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btnrefresh"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:background="@drawable/circle"
                android:scaleType="centerInside"
                android:src="@drawable/btn_refresh_selector"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:text="刷新"
                android:layout_marginTop="5dp"
                android:textColor="@color/color_f2ffffff"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <com.android.finance.ui.widget.OilgaugeProgress
            android:id="@+id/progress"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <ImageView
            android:layout_marginTop="30dp"
            android:visibility="invisible"
            android:layout_marginRight="30dp"
            android:background="@drawable/circle"
            android:scaleType="centerInside"
            android:src="@drawable/btn_preview_selector"
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/finishTip"
        android:paddingTop="15dp"
        android:textSize="13sp"
        android:textColor="@color/color_f2ffffff"
        android:text="还不错,您和信贷君仅隔一步之遥"
        android:background="@color/red_dark"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_horizontal"/>
</LinearLayout>