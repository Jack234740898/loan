<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        style="@style/financing_needs_more_item"
        android:layout_marginTop="0dp"
        android:background="@color/transparent">

        <TextView
            style="@style/financing_needs_more_left_text"
            android:text="法人或股东" />

        <TextView
            android:id="@+id/legalPerson"
            style="@style/financing_needs_more_right_arrow_text" />
    </LinearLayout>
    <com.qtt.jinrong.ui.widget.LineView
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout style="@style/financing_needs_more_item"
        android:background="@color/transparent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="0dp">

        <TextView
            style="@style/financing_needs_more_left_text"
            android:text="企业名称" />

        <com.qtt.jinrong.ui.widget.text.InputEditText
            android:id="@+id/enterpriseName"
            style="@style/financing_needs_more_right_edittext" />
    </LinearLayout>
    <com.qtt.jinrong.ui.widget.LineView
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout style="@style/financing_needs_more_item"
        android:background="@color/transparent"
        android:layout_marginTop="0dp">

        <TextView
            style="@style/financing_needs_more_left_text"
            android:text="企业地址" />

        <com.qtt.jinrong.ui.widget.text.InputEditText
            android:id="@+id/enterpriseAddress"
            style="@style/financing_needs_more_right_edittext" />
    </LinearLayout>
    <com.qtt.jinrong.ui.widget.LineView
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        style="@style/financing_needs_more_item"
        android:layout_marginTop="0dp"
        android:background="@color/transparent">

        <TextView
            style="@style/financing_needs_more_left_text"
            android:text="所属行业" />

        <TextView
            android:id="@+id/industry"
            style="@style/financing_needs_more_right_arrow_text" />
    </LinearLayout>
    <com.qtt.jinrong.ui.widget.LineView
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout style="@style/financing_needs_more_item"
        android:background="@color/transparent"
        android:layout_marginTop="0dp">

        <TextView
            style="@style/financing_needs_more_left_text"
            android:text="企业规模 (人)" />

        <com.qtt.jinrong.ui.widget.text.InputEditText
            android:id="@+id/staffNum"
            style="@style/financing_needs_more_right_edittext" />
    </LinearLayout>
    <com.qtt.jinrong.ui.widget.LineView
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        style="@style/financing_needs_more_item"
        android:layout_marginTop="0dp"
        android:background="@color/transparent">

        <TextView
            style="@style/financing_needs_more_left_text"
            android:text="企业经营地" />

        <TextView
            android:id="@+id/companyPosition"
            style="@style/financing_needs_more_right_arrow_text" />
    </LinearLayout>
    <com.qtt.jinrong.ui.widget.LineView
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        style="@style/financing_needs_more_item"
        android:layout_marginTop="0dp"
        android:background="@color/transparent">

        <TextView
            style="@style/financing_needs_more_left_text"
            android:text="经营年限" />

        <TextView
            android:id="@+id/operationPeriod"
            style="@style/financing_needs_more_right_arrow_text" />
    </LinearLayout>
    <com.qtt.jinrong.ui.widget.LineView
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        style="@style/financing_needs_more_item"
        android:layout_marginTop="0dp"
        android:background="@color/transparent">

        <TextView
            style="@style/financing_needs_more_left_text"
            android:text="注册资金" />

        <TextView
            android:id="@+id/registCapital"
            style="@style/financing_needs_more_right_arrow_text" />
    </LinearLayout>
    <com.qtt.jinrong.ui.widget.LineView
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</LinearLayout>