<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/filter1View"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/filter1Text"
            style="@style/filte_text"
            android:text="" />
    </FrameLayout>

    <com.qtt.jinrong.ui.widget.LineVerticalView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />

    <FrameLayout
        android:id="@+id/filter2View"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/filter2Text"
            style="@style/filte_text"
            android:text="" />
    </FrameLayout>

    <com.qtt.jinrong.ui.widget.LineVerticalView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />

    <FrameLayout
        android:id="@+id/filter3View"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/filter3Text"
            style="@style/filte_text"
            android:drawablePadding="10dp"
            android:text="" />
    </FrameLayout>

    <com.qtt.jinrong.ui.widget.LineVerticalView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:id="@+id/filter4View"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/filter4NumText"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/circle_red_bg"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/filter4Text"
            style="@style/filte_text"
            android:drawablePadding="10dp"
            android:text="筛选" />
    </LinearLayout>

</LinearLayout>